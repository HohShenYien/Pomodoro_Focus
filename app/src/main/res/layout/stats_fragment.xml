<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/launch_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toStartOf="@id/statsTxt"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_tomato"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usage statistics"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/statsTxt"
                android:textColor="#e74c3c"
                android:textSize="30sp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoro durations for past 7 days"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/time_chart"
            android:layout_marginVertical="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoro sessions for past 7 days"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/session_chart"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>
</ScrollView>