<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor=" #e74c3c "
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/title_countDown"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_countDown"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:id="@+id/countDownTexts">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: "
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:id="@+id/durationTxt"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session: "
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:id="@+id/sessionTxt"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sessions"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest: "
                android:textSize="16sp"
                android:layout_marginEnd="45dp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginEnd="10dp"
                android:id="@+id/restTxt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Studying"
        android:id="@+id/modeTxt"
        android:layout_below="@id/countDownTexts"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor=" #3498db "
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countDownTexts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/clock">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_tomato"
            android:id="@+id/countDownImg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:textColor="#000"
            android:textSize="70sp"
            android:text="00:00"
            android:id="@+id/timeTxt"/>

    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="18sp"
        android:padding="8dp"
        android:layout_below="@id/clock"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_default"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/startBtn"/>



</RelativeLayout>